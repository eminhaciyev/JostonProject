@model IEnumerable<JostonPortfolioProject.Models.Event>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Title</th>
                    <th scope="col">Price</th>
                    <th scope="col">SubTitle</th>
                    <th scope="col">Hours</th>
                    <th scope="col">HowManyPhoto</th>
                    <th scope="col">Content</th>

                </tr>
            </thead>
            <tbody>
                @{ var id = 0; }
                @foreach (var item in Model)
                {

                <tr>
                    <th scope="row">@(++id)</th>
                    <td>@item.Title</td>
                    <td>@item.Price</td>
                    <td>@item.SubTitle</td>
                    <td>@item.Hours</td>
                    <td>@item.HowManyPhoto</td>
                    <td>@item.Content</td>
                    <td>
                        <a href="~/Admin/Event/Edit/@item.Id" class="btn btn-info">Edit</a>
                    </td>
                    <td>
                        <a href="~/Admin/Event/Delete/@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

