@model JostonPortfolioProject.Models.Event
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="container">
    <div class="row">
        <form method="post">
            @Html.AntiForgeryToken()
            <div class="container">
                <div class="row">
                    <div class="alert alert-warning" role="alert">
                        Siz bu postu silmək istədiyinizə əminsiniz???
                    </div>
                </div>
            </div>


            <div class="container">
                <div class="row">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">@Model.Title</h5>
                            <h5 class="card-title">@Model.Price</h5>
                            <h5 class="card-title">@Model.SubTitle</h5>
                            <h5 class="card-title">@Model.Hours</h5>
                            <h5 class="card-title">@Model.HowManyPhoto</h5>
                            <h5 class="card-title">@Model.Content</h5>
                        </div>
                        <input type="submit" class="btn btn-success" value="Delete" />
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>